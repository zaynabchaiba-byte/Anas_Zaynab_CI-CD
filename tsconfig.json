{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts"]
}
